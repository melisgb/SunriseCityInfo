<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--    when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/darkGreenColor"/>
            <stroke android:width="2dp" android:dashWidth="1pt" android:dashGap="3px" android:color="@color/brightGreenColor" />
            <corners android:radius="30dp"/>
            <padding android:left="10dp"
                     android:right="10dp"
                     android:top="10dp"
                     android:bottom="10dp"/>
        </shape>
    </item>
<!--    when the button is pressed -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/brightGreenColor" android:endColor="@color/orangeColor"/>
            <stroke android:width="2dp" android:dashWidth="1pt" android:dashGap="3px" android:color="@color/colorPrimary" />
            <corners android:radius="30dp"/>
            <padding android:left="20dp"
                android:right="20dp"
                android:top="20dp"
                android:bottom="20dp"/>
        </shape>
    </item>
</selector>